@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
    function CheckBoxRequired(sender, e)
    {
        e.IsValid = jQuery(".AcceptedAgreement input:checkbox").is(':checked');
        if e.IsValid === true{
            return true;
        }
        return false;
    }
